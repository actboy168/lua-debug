{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lua",
            "request": "launch",
            "name": "Test Client",
            "console": "integratedTerminal",
            "luaRuntime": "5.4 64bit",
            "windows": {
                "luaexe": "${command:extensionPath}actboy168.lua-debug-1.19.1/bin/win/lua-debug"
            },
            "linux": {
                "luaexe": "${command:extensionPath}actboy168.lua-debug-1.19.1/bin/linux/lua-debug",
            },
            "osx": {
                "luaexe": "${command:extensionPath}actboy168.lua-debug-1.19.1/bin/macos/lua-debug",
            },
            "program": "${workspaceFolder}/extension/script/frontend/main.lua",
            "path": "${workspaceFolder}/extension/script/?.lua",
            "arg": [
                "4711",
                "${command:extensionPath}actboy168.lua-debug-1.19.1"
            ]
        },
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Test Extension",
            "runtimeExecutable": "${execPath}",
            "sourceMaps": false,
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/extension/"
            ],
            "env": {
                "VSCODE_EXTENSION_PATH" : "${command:extensionPath}actboy168.lua-debug-1.19.1"
            }
        }
    ]
}