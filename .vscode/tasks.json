{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "windows": {
        "options": {
            "shell": {
                "executable": "C:\\Windows\\System32\\cmd.exe",
                "args": [
                    "/c"
                ]
            }
        }
    },
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "tasks": [
        {
            "label": "Test",
            "command": "luamake",
            "args": [
                "test"
            ]
        },
        {
            "label": "Rebuild",
            "command": "luamake",
            "args": [
                "rebuild"
            ]
        },
        {
            "label": "Update Version",
            "command": "luamake",
            "args": [
                "lua",
                "compile/update_version.lua",
            ]
        },
        {
            "label": "Copy Extension",
            "command": "luamake",
            "args": [
                "lua",
                "compile/copy.lua",
                "extension",
                "extension",
                "${command:extensionPath}"
            ]
        },
        {
            "label": "Copy Publish",
            "command": "luamake",
            "args": [
                "lua",
                "compile/copy.lua",
                "publish",
                "publish",
                "${command:extensionPath}"
            ]
        }
    ]
}
